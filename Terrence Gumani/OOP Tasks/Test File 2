class Calculator:
    def add(self, *args):
        return sum(args)

# Example usage:
calc = Calculator()

result_two = calc.add(3, 5)
print(result_two)  # Output: 8

result_three = calc.add(2, 4, 6)
print(result_three)  # Output: 12

result_four = calc.add(1, 2, 3, 4)
print(result_four)  # Output: 10
